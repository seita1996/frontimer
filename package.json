{
	"name": "frontimer",
	"description": "",
	"version": "0.1.14",
	"author": "Seitaro",
	"license": "MIT",
	"main": "dist/main.js",
	"scripts": {
		"dev": "rimraf dist && run-p dev:*",
		"build": "cross-env NODE_ENV=\"production\" webpack --progress",
		"ebuilder": "electron-builder",
		"ebuilder:win": "electron-builder --win --x64",
		"dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
		"dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
		"test": "jest"
	},
	"build": {
		"appId": "com.seita1996.frontimer",
		"files": [
			"dist/**/*"
		],
		"win": {
			"target": "nsis",
			"icon": "src/assets/ft-logo.png"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"electronmon": {
		"patterns": [
			"dist/**/*"
		]
	},
	"dependencies": {
		"electron-store": "^8.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-svg": "^16.1.4"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.2",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.10",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.3",
		"electron": "^23.1.1",
		"electron-builder": "^23.6.0",
		"electronmon": "^2.0.2",
		"html-webpack-plugin": "^5.5.0",
		"jest": "^29.4.3",
		"jest-environment-jsdom": "^29.4.1",
		"mini-css-extract-plugin": "^2.7.2",
		"npm-run-all": "^4.1.5",
		"rimraf": "^4.1.2",
		"ts-jest": "^29.0.5",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5",
		"wait-on": "^7.0.1",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	}
}
