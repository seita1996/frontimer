{
	"name": "frontimer",
	"description": "",
	"version": "0.1.16",
	"author": "Seitaro",
	"license": "MIT",
	"main": "dist/main.js",
	"scripts": {
		"dev": "rimraf dist && run-p dev:*",
		"build": "cross-env NODE_ENV=\"production\" webpack --progress",
		"ebuilder": "electron-builder",
		"ebuilder:win": "electron-builder --win --x64",
    "ebuilder:linux": "electron-builder --linux AppImage",
		"dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
		"dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
		"test": "jest"
	},
	"build": {
		"appId": "com.seita1996.frontimer",
		"files": [
			"dist/**/*"
		],
		"win": {
			"target": "nsis",
			"icon": "src/assets/icon.png"
		},
    "linux": {
			"target": "AppImage",
			"icon": "src/assets/icon.png"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"electronmon": {
		"patterns": [
			"dist/**/*"
		]
	},
	"dependencies": {
		"electron-store": "^8.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-svg": "^16.1.7"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.1.3",
		"@testing-library/react": "^14.0.0",
		"@types/jest": "^29.5.5",
		"@types/node": "^20.5.7",
		"@types/react": "^18.2.18",
		"@types/react-dom": "^18.0.10",
		"cross-env": "^7.0.3",
		"css-loader": "^6.8.1",
		"electron": "^25.0.1",
		"electron-builder": "^24.6.3",
		"electronmon": "^2.0.2",
		"html-webpack-plugin": "^5.5.3",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"mini-css-extract-plugin": "^2.7.6",
		"npm-run-all": "^4.1.5",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2",
		"wait-on": "^7.0.1",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	}
}
