{
	"name": "frontimer",
	"description": "",
	"version": "0.1.8",
	"author": "",
	"license": "MIT",
	"main": "dist/main.js",
	"scripts": {
		"dev": "rimraf dist && run-p dev:*",
		"build": "cross-env NODE_ENV=\"production\" webpack --progress",
		"ebuilder": "electron-builder",
		"ebuilder:win": "electron-builder --win --x64",
		"dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
		"dev:electron": "wait-on dist/main.js dist/index.html && electronmon ."
	},
	"build": {
		"appId": "com.seita1996.frontimer",
		"files": [
			"dist/**/*"
		],
    "win": {
      "target": "nsis",
      "icon": "src/assets/ft-logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
	},
	"electronmon": {
		"patterns": [
			"dist/**/*"
		]
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-svg": "^15.1.14"
	},
	"devDependencies": {
		"@types/node": "^18.11.9",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.2",
		"electron": "^22.0.0",
		"electron-builder": "^23.6.0",
		"electronmon": "^2.0.2",
		"html-webpack-plugin": "^5.5.0",
		"mini-css-extract-plugin": "^2.7.0",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4",
		"wait-on": "^6.0.1",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1"
	}
}
